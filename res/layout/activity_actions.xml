<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
       	   
	<edu.neu.android.mhealth.uscteensver1.TitleView
	    android:id="@+id/view_action_title"	    
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/popup_win_background" />
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:paddingLeft="1dp"
	    android:paddingRight="1dp"
	    android:paddingBottom="2dp"
	    android:background="@color/bk_gray"
	    android:orientation="vertical" >
	    <ListView 
	        android:id="@+id/lv_actions"
	        android:layout_gravity="right"	            
	        android:layout_width="fill_parent"		            
	    	android:layout_height="fill_parent"	    	
	    	android:background="#ffffffff"
	    	android:listSelector="@drawable/list_bg_selector"
	    	android:divider="@color/bk_gray"  
	    	android:dividerHeight="4px" />
    </LinearLayout>
    
	<ImageButton
	  	android:id="@+id/btn_next_actions"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:padding="6dp"
		android:src="@drawable/popup_wind_arrow_ops"
		android:background="#ffffffff" />

</LinearLayout>